<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    tools:context="com.ncnf.main.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/to_map_link"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="315dp"
        android:elevation="5dp"
        android:onClick="goToMap"
        android:text="@string/main_map_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feed_view_button"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:text="@string/main_feedview_button"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/to_map_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eventButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:onClick="seeEvent1"
        android:text="@string/main_placeholder_event_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feed_view_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/event2Button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:elevation="5dp"
        android:onClick="seeEvent2"
        android:text="@string/main_placeholder_event_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feed_view_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_event_button"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:text="@string/create_event_button"
        app:layout_constraintTop_toBottomOf="@id/eventButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>