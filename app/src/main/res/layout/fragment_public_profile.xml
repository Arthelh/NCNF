<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.PublicProfileFragment">

    <RelativeLayout
        android:id="@+id/public_profile_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/public_profile_picture_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <include
                android:id="@+id/public_profile_picture"
                layout="@layout/profile_picture_view"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/public_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/public_profile_picture_layout"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:text="Jane Doe"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/public_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/public_profile_name"
            android:layout_centerHorizontal="true"

            android:fontFamily="sans-serif-light"
            android:text="username"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/public_profile_add_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/public_profile_username"
            android:layout_centerHorizontal="true"
            android:text="Add to friends"
            android:backgroundTint="#13870F"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp
"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/public_profile_header">

        <TextView
            android:id="@+id/public_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email : jane@doe.ch"
            android:textSize="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>